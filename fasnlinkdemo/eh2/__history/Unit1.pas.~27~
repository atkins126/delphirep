{$R *.dfm}

procedure TForm1.N1Click(Sender: TObject);
begin
A:=StrToInt(LabeledEdit4.Text);
B:=StrToInt(LabeledEdit2.Text);
C:=StrToInt(LabeledEdit3.Text);
D:=StrToInt(LabeledEdit1.Text);

end;

procedure TForm1.N2Click(Sender: TObject);
begin
LabeledEdit4.Clear;
LabeledEdit3.Clear;
LabeledEdit2.Clear;
LabeledEdit1.Clear;
D:=0;
end;

procedure TForm1.N3Click(Sender: TObject);
begin
Form1.Close;

end;

procedure TForm1.N4Click(Sender: TObject);
begin
asm
  mov eax,a
  add  eax,b
  add eax, c
  mov d, eax
end;
Memo1.Lines.Add('Расчет в Assembler сумма D=' +IntToStr((D)));
end;

procedure TForm1.N5Click(Sender: TObject);
begin
asm
mov eax,a
sub eax,b
sub eax, c
mov d,eax
end;
end;

procedure TForm1.N6Click(Sender: TObject);
begin
asm
xor eax,eax
xor edx, ebx
mov eax,a
mul b
mul c
mov d,eax
end;
Memo1.Lines.Add('Расчет в Assembler умножение A*B*С='+IntToStr((D)));
end;

procedure TForm1.N7Click(Sender: TObject);

begin
asm
xor eax,eax
xor ebx,ebx
mov eax,a
div b
div c
mov d, eax
mov c,edx
end;
Memo1.Lines.Add ('Расчет в Assembler деление A div B div С= '+' Результат='+ IntToStr(D)+' Остаток от деления='+IntToStr(E));

end;

procedure TForm1.N8Click(Sender: TObject);
begin
// ASS D = D + A*B + A^2*C
asm
xor eax,eax
xor ebx,ebx
xor ecx,ecx
xor edx, edx
mov eax, a
mul eax
mul c
xor edx,edx
mov ebx, eax
mov eax,a
mul b
add ebx, eax
add ebx, d
mov d, eax
end;
Memo1.Clear;
Memo1.Lines.Add('Рассчет по формуле d='+IntToStr((D)) );
end;

