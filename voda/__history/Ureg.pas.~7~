unit Ureg;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls, ExtCtrls;

type
  TFreg = class(TForm)
    GroupBox1: TGroupBox;
    GroupBox2: TGroupBox;
    Button1: TButton;
    LabeledEdit1: TLabeledEdit;
    LabeledEdit2: TLabeledEdit;
    procedure Button1Click(Sender: TObject);
    procedure FormShow(Sender: TObject);
    procedure FormActivate(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Freg: TFreg;

implementation

uses Udm, Uman;

{$R *.dfm}

procedure TFreg.Button1Click(Sender: TObject);
begin
Close;
end;

procedure TFreg.FormActivate(Sender: TObject);
var i:Integer;
begin
with GroupBox1 do
for I := 0 to ControlCount - 1 do
if (Controls[i]is  TLabeledEdit) then
begin
  (Controls[i]as TLabeledEdit).Text:='test';
end;

end;

procedure TFreg.FormShow(Sender: TObject);
var i: Integer;
begin
with GroupBox1 do
for i := 0 to ControlCount - 1 do
  if (Controls[i]is TLabeledEdit) then
  begin
  (Controls[i] as TLabeledEdit).PasswordChar:='*';
  end;

end;

end.
